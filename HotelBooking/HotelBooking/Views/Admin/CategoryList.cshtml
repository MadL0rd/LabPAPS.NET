@model IEnumerable<HotelBooking.Models.CategoryListViewModel>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Категории комнат</h1>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Удалить", "DeleteCategory", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Добавить новую категорию", "CreateCategory", null, new { @class = "btn btn-default" })
