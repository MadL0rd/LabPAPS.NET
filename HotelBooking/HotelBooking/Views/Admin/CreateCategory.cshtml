@model HotelBooking.Models.CreateCategoryViewModel

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="col-md-6 col-md-offset-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h1>Добавить категорию комнат</h1>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="margin-top:50px">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:50px">
                @Html.ActionLink("Назад к списку", "CategoryList", null, new { @class = "btn btn-default" })
                <input type="submit" value="Добавить категорию" class="btn btn-default" />
            </div>
        </div>
    }

</div>

