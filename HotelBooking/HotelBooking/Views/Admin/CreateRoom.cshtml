@model HotelBooking.Models.CreateRoomViewModel

@{
    ViewBag.Title = "CreateRoom";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="col-md-6 col-md-offset-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h1>Добавить комнату</h1>
        <div class="form-horizontal">
            <div class="form-group" style="margin-top:50px">
                @Html.LabelFor(model => model.SelectedHotelId, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownListFor(x => x.SelectedHotelId, new SelectList(Model.Hotels, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SelectedHotelId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="margin-top:50px">
                @Html.LabelFor(model => model.SelectedCategoryId, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownListFor(x => x.SelectedCategoryId, new SelectList(Model.Categories, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SelectedCategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="margin-top:50px">
                @Html.LabelFor(model => model.NumberOfBeds, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NumberOfBeds, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberOfBeds, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="margin-top:50px">
                @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:50px">
                @Html.ActionLink("Назад к списку", "RoomList", null, new { @class = "btn btn-default" })
                <input type="submit" value="Добавить комнату" class="btn btn-default" />
            </div>
        </div>
    }

</div>

