
@model HotelBooking.Models.RoomListViewModel
@{
    ViewBag.Title = "RoomList";
}

<h1>Комнаты</h1>

<a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" style="margin-right: 800px; margin-bottom:15px">
    Фильтры
</a>
<div class="collapse" id="collapseExample" style="text-align: center; width: 100%;">
    <div class="card card-body" style=" text-align: left; display: inline;">

        <form method="get" style="margin-top:25px; display: inline;">
            <div class="form-inline">
                <div class="my-1 mr-2">
                    <label class="control-label">Категория: </label>
                    @Html.DropDownListFor(x => x.SelectedCategoryId, new SelectList(Model.Categories, "Id", "Name"), htmlAttributes: new { @class = "form-control" })

                    <label class="control-label">Отель: </label>
                    @Html.DropDownListFor(x => x.SelectedHotelId, new SelectList(Model.Hotels, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="my-1 mr-2" style="margin-top:15px">
                    <label class="control-label">Cтоимость: </label>
                    <label class="control-label">min</label>
                    @Html.EditorFor(model => model.MinCost, new { htmlAttributes = new { @class = "form-control" } })

                    <label class="control-label">max</label>
                    @Html.EditorFor(model => model.MaxCost, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <input type="submit" value="Применить" class="btn btn-default" style="margin-top:15px" />
            </div>
        </form>

    </div>
</div>


<table class="table table-striped table-bordered" style="margin-top:25px">
    <tr>
        <th>
            Отель
        </th>
        <th>
            Категория
        </th>
        <th>
            Количество мест
        </th>
        <th>
            Цена
        </th>
    </tr>

    @foreach (var item in Model.Rooms)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfBeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
        </tr>
    }

</table>

<p>
    Для того, чтобы получить доступ ко всем функциям сайта необходимо зарегистрироваться либо войти в свою учетную запись
</p>



